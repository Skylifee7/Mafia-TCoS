    private int giveRandomness(){
        //bu kısımda success rate mi yoksa random sayıyı mı döndürecek? (şu an -11 11 arası random dönüyor. (int)
        int max=11;
        int min=-11;
        int n = ThreadLocalRandom.current().nextInt(min, max + 1);

        return n;
    }
